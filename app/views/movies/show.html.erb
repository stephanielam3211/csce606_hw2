<p style="color: green"><%= notice %></p>

<!-- Movie Details Container Styling -->
<div class="movie-details">
  <%= render @movie %>
</div>

<!-- Action Buttons Styling -->
<div class="action-buttons">
  <%= link_to "Edit this movie", edit_movie_path(@movie), class: "btn-action edit-btn" %> |
  <%= link_to "Back to movies", movies_path, class: "btn-action back-btn" %> |

  <%= button_to "Destroy this movie", @movie, method: :delete, class: "btn-action delete-btn" %>
</div>

