<% content_for :title, "New movie" %>

<h1>Add a New Movie</h1>

<!-- Form Styling: Centered Card with Padding -->
<div class="form-container">
  <%= render "form", movie: @movie %>
</div>

<br>

<!-- Back Link Styling -->
<div class="btn-back-container">
  <%= link_to "Back to Movies", movies_path, class: "btn-back" %>
</div>

<!-- Additional Styling for the Form and Back Button -->
<style>
  .form-container {
    width: 50%;
    margin: auto;
    padding: 20px;
    border: 2px solid #ddd;
    border-radius: 8px;
    background-color: #add8e6;
  }

  .btn-back {
    display: inline-block;
    margin-top: 20px;
    padding: 10px;
    background-color: #007bff;
    color: white;
    text-decoration: none;
    border-radius: 5px;
  }

  .btn-back:hover {
    background-color: #0056b3;
  }
</style>

